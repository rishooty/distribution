seat * hide_cursor 1000
default_border none
default_floating_border none
titlebar_border_thickness 0

# Alt fullscreen toggle for use with gptokeyb
set $mod Mod1
bindsym $mod+f fullscreen toggle

# Sonic Decompilation 2013
for_window [app_id="sonic2013"] fullscreen disable
# Streets of Rage Remake
for_window [app_id="bgdi"] fullscreen disable

bar {
    position top
    mode overlay
    hidden_state hide
    modifier Mod4
    status_command i3status
}
